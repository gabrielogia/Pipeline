Geometry = xyzFormat {
   <<< '../../reduced_xyz_files/15621059.xyz'
}

Driver = GeometryOptimization {
   Optimizer = Rational {}
   MaxSteps = 10000
   OutputPrefix = '15621059'
   Convergence { GradElem = 1E-4 }
}

Hamiltonian = DFTB {
   SCC = Yes
   SCCTolerance = 1e-9
   MaxSCCIterations = 1000

   MaxAngularMomentum = {
      C = "p"
      H = "s"
      O = "p"
   }

   SlaterKosterFiles = Type2FileNames {
      Prefix = '../../3ob-3-1/'
      Separator = '-'
      Suffix = '.skf'
      LowerCaseTypeName = No
   }

   Filling = Fermi {
    Temperature [K] = 300
   }
}

Analysis = {
  Polarisability = {
    Static = Yes
    }
}

ElectronDynamics = {
   Steps = 30000
   TimeStep [au] = 0.1
   Perturbation = Kick {
     PolarizationDirection = all
   }
   FieldStrength [v/a] = 0.001
}

ParserOptions {
   ParserVersion = 14
}
